{
  "name": "gambiarra",
  "version": "0.1.2",
  "description": "CLI for Gambiarra - Share local LLMs across your network",
  "keywords": [
    "llm",
    "ollama",
    "ai",
    "cli",
    "local-ai",
    "local-llm",
    "lm-studio"
  ],
  "author": "Arthur BM",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/arthurbm/gambiarra.git",
    "directory": "packages/cli"
  },
  "homepage": "https://github.com/arthurbm/gambiarra",
  "bugs": "https://github.com/arthurbm/gambiarra/issues",
  "type": "module",
  "bin": {
    "gambiarra": "./src/cli.ts"
  },
  "exports": {
    "./serve": "./src/commands/serve.ts",
    "./create": "./src/commands/create.ts",
    "./join": "./src/commands/join.ts",
    "./list": "./src/commands/list.ts",
    "./monitor": "./src/commands/monitor.ts"
  },
  "files": [
    "src",
    "README.md"
  ],
  "scripts": {
    "dev": "bun run src/cli.ts",
    "build": "bun run build.ts",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "@gambiarra/core": "workspace:*",
    "tui": "workspace:*",
    "clipanion": "^4.0.0-rc.4",
    "nanoid": "^5.1.5"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "publishConfig": {
    "access": "public"
  }
}
