import { generateText } from "ai";

const gambiarra = createGambiarra({
  roomCode: "ABC123",
  hubUrl: "http://localhost:3000",
});

// Use any available participant
const result = await generateText({
  model: gambiarra.any(),
  prompt: "Hello, Gambiarra!",
