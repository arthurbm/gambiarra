---
/**
 * Hero.astro - Override Starlight's default Hero
 *
 * On the landing page (index), renders our custom Lander component.
 * On other pages, falls back to Starlight's default Hero behavior.
 */
import Default from "@astrojs/starlight/components/Hero.astro";
import Lander from "./Lander.astro";

const { slug } = Astro.locals.starlightRoute.entry;
---

{slug === "" ? (
  <Lander {...Astro.props} />
) : (
  <Default {...Astro.props}><slot /></Default>
)}
